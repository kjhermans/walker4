#!/usr/bin/perl

##
## Copyright 2015 K.J. Hermans
##

my @types = (
  'void', 'int', 'unsigned[ \t\r\n]+int', 'unsigned',
  'unsigned[ \t\r\n]+char', 'uchar', 'char', 'double',
  'float', 'u_int64_t', 'uint64_t', 'int64_t', 'u_int32_t',
  'uint32_t', 'int32_t', 'u_int16_t', 'uint16_t',
  'int16_t', 'naio_resobj_t',
);

my $pattern;
my $hdef;
my @prefix;
for (my $i=0; $i < scalar(@ARGV); $i++) {
  if ($ARGV[ $i ] eq '-p') {
    splice(@ARGV, $i, 1);
    $pattern = splice(@ARGV, $i, 1);
  }
  if ($ARGV[ $i ] eq '-i') {
    splice(@ARGV, $i, 1);
    $hdef = splice(@ARGV, $i, 1);
  }
  if ($ARGV[ $i ] eq '-t') {
    splice(@ARGV, $i, 1);
    my $t = splice(@ARGV, $i, 1);
    print STDERR "Adding type $t\n";
    push @types, $t;
  }
  if ($ARGV[ $i ] eq '-a') {
    splice(@ARGV, $i, 1);
    my $prefix = splice(@ARGV, $i, 1);
    push @prefix, $prefix;
    print STDERR "Adding file $prefix\n";
    --$i;
  }
}

my $dir = shift @ARGV;
if (!defined($hdef)) {
  my $hdef = $dir;
  $hdef =~ s/\r?\n$//;
  $hdef =~ s/[\/.]/_/g;
  $hdef = uc($hdef);
}

print "/**
* \\file
* \\brief This file is an autogenerated function prototypes header file.
*
* Copyright 2018 K.J. Hermans
* WARNING: This file is automatically generated. Any changes will be lost.
*/

#ifndef _$hdef" . "_FUNCTIONS_H_
#define _$hdef" . "_FUNCTIONS_H_

";

while (my $prefix = shift @prefix) { system("cat $dir/$prefix"); }

find($dir, 'enter_code', 1, $pattern);
foreach my $arg (@ARGV) {
  find($arg, 'enter_code', 1, $pattern);
}

sub find {
  my $dir = shift || '.';
  my $func = shift;
  my $norecurse = shift;
  my $pattern = shift;
  if (opendir(DIR, $dir)) {
    my @subdirs;
    my @files;
    while (my $entry = readdir(DIR)) {
      next if ($entry eq '.' || $entry eq '..');
      if ($pattern) {
        next if ($entry !~ /$pattern/);
      }
      my $path = "$dir/$entry";
      if (-d $path) {
        push @subdirs, $path;
      } elsif (-f $path && $path =~ /\.c$/) {
        my $ident = $entry;
        $ident =~ s/\.c$//;
        push @files, [ $path, $ident ];
      }
    }
    closedir(DIR);
    foreach my $file (sort { $a->[0] cmp $b->[0] } @files) {
      &$func(@{$file});
    }
    if (!$norecurse) {
      foreach my $subdir (sort @subdirs) {
        find($subdir, $func, $norecurse, $pattern);
      }
    }
  }
}

sub enter_code {
  my ($path, $func) = @_;
  my $code = `cat $path`;
  $func = '[a-zA-Z_][a-zA-Z0-9_]*';
  my $types = join('|', @types);
  while (1) {
    my $match = 0;
    if ($code =~ s/(static[ \t\r\n]+)?(inline[ \t\r\n]+)?(($types)\**[ \t\r\n]+$func)[ \t\r\n]*(\([^\{;]*\))[ \t\r\n]*\{//s) {
      my ($static, $inline, $decl, $params) = ($1, $2, $3, $5);
      if ($static !~ /^static/) {
        print "/* declared in $path */\n";
        print "extern\n$inline$decl\n  $params";
        if ($decl =~ /^void/) {
          print ";\n\n";
        } else {
          print "\n  __attribute__ ((warn_unused_result));\n\n";
        }
      }
      $match = 1;
    }
    last if (!$match);
  }
}

print "

#endif";

1;
